---
export interface Props {
  current: number;
  total: number;
  label?: string;
}

const { current, total, label = "Progression" } = Astro.props;
const percentage = Math.round((current / total) * 100);
---

<div class="bg-white rounded-lg p-4 shadow-md">
  <div class="flex justify-between items-center mb-2">
    <span class="text-sm font-medium text-gray-700">{label}</span>
    <span class="text-sm text-gray-500">{current}/{total}</span>
  </div>
  
  <div class="w-full bg-gray-200 rounded-full h-3">
    <div 
      class="bg-gradient-to-r from-orange-500 to-green-500 h-3 rounded-full transition-all duration-500"
      style={`width: ${percentage}%`}
    ></div>
  </div>
  
  <div class="text-right mt-1">
    <span class="text-xs text-gray-600">{percentage}% complété</span>
  </div>
</div>